{
    "name": "Better",
    "version": "0.1",
    "description": "Find better products & services than the one you're currently visiting",
    "permissions": ["activeTab", "storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
    "content_scripts": [
        {
            "matches": ["https://*/*", "http://*/*"],
            "js": ["contentscript.js"]
        }
    ],
    "manifest_version": 2,
    "options_ui": {
      "page": "options.html",
      "open_in_tab": false
    },
    "web_accessible_resources": [
      "defaultlist.json"
    ]
  }